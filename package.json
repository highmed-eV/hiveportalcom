{
  "name": "hiveportalcom",
  "version": "0.1",
  "description": "SDK for communication between a parent website (e.g. HIVEportal) and embedded apps via postMessage.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --format=iife --global-name=HivePortalMessenger --outfile=dist/hiveportal-messenger.standalone.min.js --minify",
