  "author": "dro",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^24.1.0",
    "esbuild": "^0.25.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
